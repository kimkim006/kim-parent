<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper 
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kim.admin.dao.MenuResourceDao">

	<sql id="selectColumn">
		t.id as id,
		t.menu_code as menuCode,
		t.resource_code as resourceCode,
		t.atv_flag as atvFlag,
		DATE_FORMAT(t.oper_time,'%Y-%m-%d %H:%i:%s') as operTime,
		t.oper_user as operUser,
		t.oper_name as operName
	</sql>
	
	<select id="list" parameterType="com.kim.admin.vo.MenuResourceVo"
		resultType="com.kim.admin.entity.MenuResourceEntity">
		select 
			<include refid="selectColumn"/>
		from icm_admin_menu_resource_rl as t
		<where>
			<include refid="queryCondition"/>
		</where>
	</select>
		
	<sql id="queryCondition">
        <if test="obj.id != null">
            AND t.id = #{obj.id}
        </if>
        <if test="obj.menuCode != null and obj.menuCode != ''">
            AND t.menu_code = #{obj.menuCode}
        </if>
        <if test="obj.resourceCode != null and obj.resourceCode != ''">
            AND t.resource_code = #{obj.resourceCode}
        </if>
        <if test="obj.atvFlag != null">
            AND t.atv_flag = #{obj.atvFlag}
        </if>
	</sql>
	
	<select id="listByPage" parameterType="java.util.HashMap"
		resultType="com.kim.admin.entity.MenuResourceEntity">
		select 
			<include refid="selectColumn"/>
		from icm_admin_menu_resource_rl as t
		<where>
			<include refid="queryCondition"/>
		</where>
		<if test="page.orderBy != null and page.orderBy != ''">
			order by ${page.orderBy} ${page.orderType} 
		</if>
		limit #{page.offset},#{page.rows}
	</select>
	
	<!-- <select id="listByPageCount" parameterType="java.util.HashMap" resultType="int">
		select 
			count(1) as count
		from icm_admin_menu_resource_rl as t
		<trim prefix="WHERE" prefixOverrides="AND |OR ">
			<include refid="queryCondition"/>
		</trim>
	</select> -->
	 
	<select id="findById" parameterType="String"
		resultType="com.kim.admin.entity.MenuResourceEntity">
		select 
			<include refid="selectColumn"/>
		from icm_admin_menu_resource_rl as t 
		where t.id=#{id} and t.atv_flag = 1
		limit 1
	</select>
	
	<select id="find" parameterType="com.kim.admin.vo.MenuResourceVo"
		resultType="com.kim.admin.entity.MenuResourceEntity">
		select 
			<include refid="selectColumn"/>
		from icm_admin_menu_resource_rl as t 
		where t.id=#{id} and t.atv_flag = #{atvFlag}
		limit 1
	</select>
	
	<sql id="insertField">
			menu_code,
			resource_code,
			atv_flag,
			oper_time,
			oper_user,
			oper_name
	</sql>
		
	<insert id="insert" parameterType="com.kim.admin.entity.MenuResourceEntity">
		insert into icm_admin_menu_resource_rl(
			<include refid="insertField"></include>
		) values (
            #{menuCode},
            #{resourceCode},
            #{atvFlag},
            now(),
            #{operUser},
            #{operName}
		)
	</insert>
	
	<insert id="insertBatch" parameterType="java.util.List">
		insert into icm_admin_menu_resource_rl(
			<include refid="insertField"></include>
		) values 
		<foreach collection="list" item="item" separator=",">
		(
            #{item.menuCode},
            #{item.resourceCode},
            #{item.atvFlag},
            now(),
            #{item.operUser},
            #{item.operName}
		)
		</foreach>
	</insert>

	<update id="update" parameterType="com.kim.admin.entity.MenuResourceEntity">
		update icm_admin_menu_resource_rl 
		<set>
            <if test="menuCode != null">
                menu_code = #{menuCode},
            </if>
            <if test="resourceCode != null">
                resource_code = #{resourceCode},
            </if>
            oper_time = now(),
            <if test="operUser != null">
                oper_user = #{operUser},
            </if>
            <if test="operName != null">
                oper_name = #{operName},
            </if>
		</set>
		where id=#{id} and atv_flag = 1
	</update>
	
	<delete id="delete" parameterType="com.kim.admin.vo.MenuResourceVo">
		delete from icm_admin_menu_resource_rl 
		where menu_code=#{menuCode}
		and resource_code = #{resourceCode}
	</delete>
	
	<update id="deleteLogic" parameterType="com.kim.admin.vo.MenuResourceVo">
		update icm_admin_menu_resource_rl set atv_flag=0
		where menu_code=#{menuCode}
		and resource_code = #{resourceCode}
	</update>
	
	<update id="deleteLogicByMenu" parameterType="com.kim.admin.vo.MenuResourceVo">
		update icm_admin_menu_resource_rl set atv_flag=0
		where menu_code=#{menuCode}
	</update>
	
</mapper>