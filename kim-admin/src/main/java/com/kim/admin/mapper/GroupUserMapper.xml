<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper 
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kim.admin.dao.GroupUserDao">

	<sql id="selectColumn">
		t.id as id,
		t.group_code as groupCode,
		t.username as username,
		t.type as type,
		t.tenant_id as tenantId,
		t.atv_flag as atvFlag,
		DATE_FORMAT(t.oper_time,'%Y-%m-%d %H:%i:%s') as operTime,
		t.oper_user as operUser,
		t.oper_name as operName,
		t.remark as remark
	</sql>
	
	<select id="list" parameterType="com.kim.admin.vo.GroupUserVo"
		resultType="com.kim.admin.entity.GroupUserEntity">
		select 
			<include refid="selectColumn"/>
		from icm_admin_group_user as t
		<where>
			<include refid="queryCondition"/>
		</where>
	</select>
		
	<sql id="queryCondition">
        <if test="obj.id != null">
            AND t.id = #{obj.id}
        </if>
        <if test="obj.groupCode != null and obj.groupCode != ''">
            AND t.group_code = #{obj.groupCode}
        </if>
        <if test="obj.username != null and obj.username != ''">
            AND t.username = #{obj.username}
        </if>
        <if test="obj.type != null">
            AND t.type = #{obj.type}
        </if>
		AND t.atv_flag = 1
    	AND t.tenant_id = #{obj.tenantId}
	</sql>
	
	<sql id="insertField">
			group_code,
			username,
			type,
			tenant_id,
			atv_flag,
			oper_time,
			oper_user,
			oper_name,
			remark
	</sql>
		
	<insert id="insertGroupUser" parameterType="com.kim.admin.vo.GroupUserVo">
		insert into icm_admin_group_user(
			<include refid="insertField"></include>
		) values (
            #{groupCode},
            #{username},
            #{type},
            #{tenantId},
            #{atvFlag},
            now(),
            #{operUser},
            #{operName},
            #{remark}
		)
	</insert>
	
	<!--
	<insert id="insertBatch" parameterType="java.util.List">
		insert into icm_admin_group_user(
			<include refid="insertField"></include>
		) values 
		<foreach collection="list" item="item" separator=",">
		(
            #{item.groupCode},
            #{item.username},
            #{item.type},
            #{item.tenantId},
            #{item.atvFlag},
            now(),
            #{item.operUser},
            #{item.operName},
            #{item.remark}
		)
		</foreach>
	</insert>
	-->
	
	<update id="update" parameterType="com.kim.admin.entity.GroupUserEntity">
		update icm_admin_group_user 
		<set>
            <if test="groupCode != null">
                group_code = #{groupCode},
            </if>
            <if test="username != null">
                username = #{username},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
            oper_time = now(),
            <if test="operUser != null">
                oper_user = #{operUser},
            </if>
            <if test="operName != null">
                oper_name = #{operName},
            </if>
            <if test="remark != null">
                remark = #{remark},
            </if>
		</set>
		where id=#{id} and atv_flag = 1
			AND tenant_id = #{tenantId}
	</update>
	
	<update id="deleteLogic" parameterType="com.kim.admin.vo.GroupUserVo">
		update icm_admin_group_user set atv_flag=0, oper_time = now()
		where atv_flag = 1
		and group_code=#{groupCode}
		<if test="username != null and username != ''">
			AND username = #{username}
		</if>
		AND tenant_id = #{tenantId}
	</update>
	
</mapper>